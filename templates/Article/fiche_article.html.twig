{% extends 'base.html.twig' %}

{% block title %}{{article.libelle}}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row mt-3 mb-2">
            <div class="col">
                <h1>{{article.libelle}}</h1>
            </div>
            <div class="col">
                <h2 class="text-center">{{article.prix}}&euro;</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 mb-3">
                {{article.description}}
            </div>
            <div class="col">
                <img style="height: 250px; width: 250px;" src="{{article.image}}" alt="">
            </div>
        </div>
        <div class="row  mt-3 mb-2">
        {% set a = article.auteur %}
            <div class="col-mr-2">
                <a href="{{path('compte_user', {'id': a.id, 'nom': a.nom} )}}">
                    <img style="height: 150px; width: 150px;" src="{{a.avatar}}" alt="">
                </a>
            </div>
            <div class="col">
                <a href="{{path('compte_user', {'id': a.id, 'nom': a.nom} )}}">
                    <h2>Pigiste : {{a.prenom}} {{a.nom}}</h2>
                </a>
            </div>
        </div>
    </div>
{% endblock %}